# FeatureBeats Environment Variables
# Copy this file to .env and fill in your values

# Kaggle API credentials (for dataset download)
# Get these from https://www.kaggle.com/settings/account
KAGGLE_USERNAME=your_kaggle_username
KAGGLE_KEY=your_kaggle_api_key

# Project settings
PROJECT_ROOT=/path/to/FeatureBeats
DATA_DIR=/path/to/FeatureBeats/data

# Optional: Spotify API credentials (for future enhancements)
# SPOTIFY_CLIENT_ID=your_spotify_client_id
# SPOTIFY_CLIENT_SECRET=your_spotify_client_secret

# Optional: Database settings (if using a database in the future)
# DATABASE_URL=sqlite:///featurebeats.db

# Logging
LOG_LEVEL=INFO
