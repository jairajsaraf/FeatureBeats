# Git attributes for FeatureBeats

# Jupyter notebooks - use nbstripout to clean outputs before committing
*.ipynb filter=nbstripout

# Large CSV files - use Git LFS if needed
*.csv filter=lfs diff=lfs merge=lfs -text

# Data files
data/raw/** filter=lfs diff=lfs merge=lfs -text
data/processed/** filter=lfs diff=lfs merge=lfs -text

# Model files
*.pkl filter=lfs diff=lfs merge=lfs -text
*.joblib filter=lfs diff=lfs merge=lfs -text
*.h5 filter=lfs diff=lfs merge=lfs -text
*.pt filter=lfs diff=lfs merge=lfs -text
*.pth filter=lfs diff=lfs merge=lfs -text

# Text files should have LF line endings
*.py text eol=lf
*.txt text eol=lf
*.md text eol=lf
*.yaml text eol=lf
*.yml text eol=lf
*.json text eol=lf
*.sh text eol=lf

# Windows batch files should have CRLF line endings
*.bat text eol=crlf
